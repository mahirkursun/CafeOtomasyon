@model CafeOtomasyon.Models.Entity.Personel
@{
    ViewBag.Title = "Personel Guncelle";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürünler</title>
    <link rel="stylesheet" href="~/Icerik/Personel/css/style.css" />
</head>
<body>
    <header>
        <a href="~/Admin/Index">
            <img style="height:530px;width:800px; margin-top:-130px; position:relative;margin-left:760px;" src="~/Icerik/Admin/img/baslik.png" />
        </a>

    </header>

    <section >
        <section >

            @using (Html.BeginForm("Güncelle", "Personel", FormMethod.Post))
            {
            <div class="form4">
                <div class="personelguncelleform">
                    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "geridonbuton" })
                    <center>
                        @Html.ActionLink("Personel Güncelle", "Guncelle", null, new { @class = "indbaslik" })
                    </center>
                    <hr />
                    @Html.LabelFor(m => m.personelID)
                    @Html.TextBoxFor(m => m.personelID, new { @class = "personelguncelle" })
                    <br />
                    @Html.LabelFor(m => m.personelAd)
                    @Html.TextBoxFor(m => m.personelAd, new { @class = "personelguncelle" })
                    <br />
                    @Html.LabelFor(m => m.personelSoyad)
                    @Html.TextBoxFor(m => m.personelSoyad, new { @class = "personelguncelle" })
                    <br />
                    @Html.LabelFor(m => m.personelTelefon)
                    @Html.TextBoxFor(m => m.personelTelefon, new { @class = "personelguncelle" })
                    <br />
                    @Html.LabelFor(m => m.personelBolum)
                    @Html.TextBoxFor(m => m.personelBolum, new { @class = "personelguncelle" })

                    <button class="personelguncellebuton">Personel Guncelle</button>
                    <br />
                    <hr />
                </div>

            </div>

            }
        </section>
    </section>

</body>
</html>
