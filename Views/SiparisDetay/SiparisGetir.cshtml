@model CafeOtomasyon.Models.Entity.Siparis
@{
    ViewBag.Title = "SiparisGetir";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürünler</title>
    <link rel="stylesheet" href="~/Icerik/SiparisDetay/css/style.css"/>
</head>
<body>
    <header>
        <a href="~/Admin/Index">
            <img style="height:530px;width:800px; margin-top:-130px; position:relative;margin-left:760px;" src="~/Icerik/Admin/img/baslik.png" />
        </a>

    </header>

    <section>
        <section>
            
                @using (Html.BeginForm("Guncelle", "SiparisDetay", FormMethod.Post))
                {
                    <div class="form3">
                        <div class="satisguncelleform">

                            @Html.ActionLink("Geri Dön", "Index", null, new { @class = "geridonbuton" })
                            <center>
                                @Html.ActionLink("Sipariş Güncelle", "SiparisGetir", null, new { @class = "indbaslik" })
                            </center>
                            <hr />

                            @Html.LabelFor(m => m.siparisID)
                            @Html.TextBoxFor(m => m.siparisID, new { @class = "satisguncelle" })
                            <br />
                            @Html.LabelFor(m => m.siparisUrun)
                            @Html.TextBoxFor(m => m.siparisUrun, new { @class = "satisguncelle" })
                            <br />
                            @Html.LabelFor(m => m.siparisAdet)
                            @Html.TextBoxFor(m => m.siparisAdet, new { @class = "satisguncelle" })
                            <br />
                            @Html.LabelFor(m => m.siparisZaman)
                            @Html.TextBoxFor(m => m.siparisZaman, new { @class = "satisguncelle" })
                            <br />
                            @Html.LabelFor(m => m.siparisMasa)
                            @Html.TextBoxFor(m => m.siparisMasa, new { @class = "satisguncelle" })
                            <br />
                            @Html.LabelFor(m => m.siparisDurum)
                            @Html.TextBoxFor(m => m.siparisDurum, new { @class = "satisguncelle" })
                            <br />
                            @Html.LabelFor(m => m.siparisFiyat)
                            @Html.TextBoxFor(m => m.siparisFiyat, new { @class = "satisguncelle" })
                            <br />
                            <button class="satisguncellebuton">Ürün Güncelle</button>

                            <br />
                            <hr />
                        </div>
                    </div>
                    

                }

           
        </section>
    </section>
</body>
</html>
