@using CafeOtomasyon.Models.Entity;
@model List<Siparis>
@{
    ViewBag.Title = "Sipariş Detay";
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Siparişler</title>
    <link rel="stylesheet" href="~/Icerik/SiparisDetay/css/style.css" />
</head>
<body>
    <header>
        <a href="~/Admin/Index">
            <img style="height:530px;width:800px; margin-top:-130px; position:relative;margin-left:760px;" src="~/Icerik/Admin/img/baslik.png" />
        </a>

    </header>

    <section id="main-content">
        <section class="wrapper">

            <table class="container2" align="center">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Ürün</th>
                        <th>Sİpariş Adet</th>
                        <th>Sipariş Zamanı</th>
                        <th>Masa</th>
                        <th>Sipariş Durumu</th>
                        <th>Fiyat</th>
                        <th>Sipariş Sil</th>
                        <th>Sipariş Güncelle</th>

                    </tr>
                </thead>
            </table>


            <table class="container" align="center">
                <tbody>
                    @foreach (var siparis in Model)
                    {
                        <tr>
                            <td>@siparis.siparisID</td>
                            <td>@siparis.siparisUrun</td>
                            <td>@siparis.siparisAdet</td>
                            <td>@siparis.siparisZaman</td>
                            <td>@siparis.siparisMasa</td>
                            <td>@siparis.siparisDurum</td>
                            <td>@siparis.siparisFiyat<a> ₺</a></td>

                            <td>@Html.ActionLink("Sil", "sil", new { id = siparis.siparisID }, new { @class = "sillink", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
                            <td><a href="/SiparisDetay/SiparisGetir/@siparis.siparisID" class="guncellelink">GÜNCELLE</a></td>
                        </tr>
                    }
                </tbody>

            </table>

            <table class="container3">
                <center>
                    <tr>
                        <td>
                            <a href="~/Admin/Index"><img src="~/Icerik/SiparisDetay/img/Anasayfa1.jpg" /></a>
                        </td>
                        <td>
                            <a href="/Siparisler/Index"><img src="~/Icerik/SiparisDetay/img/siparisdetay2.png" /></a>
                        </td>
                        <td>
                            <a href="~/Giris/Index"><img src="~/Icerik/SiparisDetay/img/Cikis2.jpg" /></a>

                        </td>
                    </tr>
                </center>
            </table>
        </section>
    </section>

</body>
</html>
